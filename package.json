{
  "name": "hapi-template",
  "author": "Paul Walker <paul@blacksun.org.uk",
  "version": "0.1.0",
  "main": "lib/main.js",
  "license": "MIT",
  "scripts": {
    "setup:certs": "mkdir -p certs ; mkcert -cert-file certs/hapitemplate.lvh.me.pem -key-file certs/hapitemplate.lvh.me-key.pem hapitemplate.lvh.me localhost",
    "dev:tsc": "tsc --watch -p .",
    "dev:serve": "nodemon --delay 1 -e ts,js,ejs -w lib -w templates lib/main.js",
    "dev": "run-p dev:*",
    "build:code": "tsc -p tsconfig-prod.json",
    "build:css:compile": "sass src/css/style.sass static/css/style.css",
    "build:css:minify": "postcss static/css/style.css --map static/css/style.min.css.map -o static/css/style.min.css",
    "build:css": "yarn build:css:compile && yarn build:css:minify",
    "build": "run-p build:css build:code",
    "knex": "knex --knexfile src/knexfile.ts",
    "knex:migrate:dev": "yarn knex migrate:latest --env development",
    "knex:migrate:test": "yarn knex migrate:latest --env test",
    "knex:migrate:prod": "yarn knex migrate:latest --env production",
    "lint": "eslint src/*.ts",
    "lint:ci": "mkdir -p reports && eslint --format junit src/*.ts > reports/lint.xml",
    "start": "NODE_ENV=production nodemon -e js,ejs -w lib -w templates -d 5 lib/main.js"
  },
  "engines": {
    "node": ">=14.0",
    "yarn": ">=1.22.10"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@hapi/cookie": "^11.0.2",
    "@hapi/hapi": "^20.2.0",
    "@hapi/inert": "^6.0.5",
    "@hapi/vision": "^6.1.0",
    "@types/bcrypt": "^3.0.1",
    "@types/hapi__vision": "^5.5.3",
    "bcrypt": "^5.0.1",
    "bulma": "^0.9.3",
    "dotenv": "^8.6.0",
    "ejs": "^3.1.7",
    "knex": "^0.21.17",
    "laabr": "^6.1.3",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@types/ejs": "^3.0.6",
    "@types/hapi__cookie": "^10.1.2",
    "@types/hapi__hapi": "^20.0.5",
    "@types/hapi__inert": "^5.2.2",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.22.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "sass": "^1.51.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
