<%- include("header"); -%>

<% if(locals.message) { %>
  <h3><%= locals.message %></h3>
<% } %>

<form method="post">
  <div class="w-2/5 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
    <div class="mb-4">
      <label class="block text-grey-darker text-sm font-bold mb-2" for="email">
        email
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" id="emailInput" type="text" name="email" placeholder="email" required>
      <span id="email-error" class="error text-red-500"></span>
    </div>
    <div class="mb-6">
      <label class="block text-grey-darker text-sm font-bold mb-2" for="password">
        Password
      </label>
      <input class="shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3" id="passwordInput" type="password" name="password" placeholder="password" required>
      <span id="password-error" class="error text-red-500"></span>
    </div>
    <div class="flex items-center justify-between">
      <input value="Login" type="submit" class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500">
    </div>
  </div>
</form>

<%- include("inputErrorScript"); -%>

<%- include("footer"); -%>
